<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="red_button">
        <item name="android:background">@drawable/gradient_red_button_state_style</item>
        <item name="android:textColor">@color/white</item>
        <item name="elevation">3dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">7dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="green_button">
        <item name="android:background">@drawable/gradient_green_button_state_style</item>
        <item name="android:textColor">@color/black_matte</item>
        <item name="elevation">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">7dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="gold_button">
        <item name="android:background">@drawable/gradient_gold_button_state_style</item>
        <item name="android:textColor">@color/black_matte</item>
        <item name="elevation">3dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">7dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
</resources>